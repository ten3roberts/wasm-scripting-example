{
    "run scripting": {
        "cmd": [
            "cargo",
            "run",
            "--package",
            "scripting-example",
            "--bin",
            "scripting-example"
        ]
    },
    "build scripting": {
        "cmd": [
            "cargo",
            "build",
            "--package",
            "scripting-example",
            "--bin",
            "scripting-example"
        ]
    },
    "build guest": {
        "cmd": [
            "./build_guest.sh"
        ],
        "components": {
            "qf": {
                "compiler": "cargo"
            }
        }
    },
    "build app": {
        "cmd": [
            "./build_app.sh"
        ],
        "components": {
            "qf": {
                "compiler": "cargo"
            }
        }
    },
    "serve app": {
        "cmd": [
            "python3",
            "-m",
            "http.server"
        ],
        "cwd": "./public"
    },
    "debug scripting-example": {
        "cmd": "cargo build -p scripting-example",
        "components": {
            "dap": {
                "program": "./target/debug/scripting-example",
                "adapter": "rust"
            }
        }
    }
}
