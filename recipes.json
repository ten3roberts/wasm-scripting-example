{
    "run scripting": {
        "cmd": [
            "cargo",
            "run",
            "--package",
            "scripting-example",
            "--bin",
            "scripting-example"
        ],
        "depends_on": [
            "build guest"
        ]
    },
    "build scripting": {
        "cmd": [
            "cargo",
            "build",
            "--package",
            "scripting-example",
            "--bin",
            "scripting-example"
        ],
        "depends_on": [
            "build guest"
        ]
    },
    "build guest": {
        "cmd": [
            "./build_guest.sh"
        ],
        "components": {
            "qf": {
                "compiler": "cargo"
            }
        }
    },
    "build app": {
        "cmd": [
            "./build_app.sh"
        ],
        "components": {
            "qf": {
                "compiler": "cargo"
            }
        },
        "depends_on": [
            "build guest"
        ]
    },
    "serve app": {
        "cmd": [
            "python3",
            "-m",
            "http.server"
        ],
        "cwd": "./public"
    },
    "debug scripting-example": {
        "cmd": "cargo build -p scripting-example",
        "components": {
            "dap": {
                "program": "./target/debug/scripting-example",
                "adapter": "rust"
            }
        }
    },
    "build test components": {
        "cmd": "./build_test_components.sh",
        "cwd": "./scripting-tests/"
    },
    "test": {
        "cmd": "cargo test --workspace",
        "depends_on": [
            "build test components"
        ]
    },
    "test wasm": {
        "cmd": "wasm-pack test --node",
        "depends_on": [
            "build test components"
        ],
        "cwd": "./scripting-tests/"
    }
}
